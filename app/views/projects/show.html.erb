<section id="post_content">
  <p>
    <strong>Name:</strong>
    <%= @project.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @project.description %>
  </p>

  <p>
    <strong>Image:</strong>
    <%= image_tag @project.image.thumb.url%>
  </p>

  <p>
    <strong>Url:</strong>
    <%= @project.url %>
  </p>

  <%= link_to 'Edit', edit_project_path(@project) %> |
  <%= link_to 'Back', projects_path %>
</section>